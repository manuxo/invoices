<!-- Modal -->
<div class="modal fade" id="addInvoiceModal" tabindex="-1" role="dialog" aria-labelledby="addInvoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addInvoiceModalLabel">
                    <i class="fa fa-cart-plus" aria-hidden="true"></i> Add Invoice
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form" name="form-add-invoice" id="form-add-invoice">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 scrollXTable bg-light">
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Unit Cost</th>
                                        <th>Quantity</th>
                                        <th>Amount</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbody-add-invoice-lines">
                                </tbody>
                            </table>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="add-invoice-customer">Customer</label>
                                <select class="form-control" name="add-invoice-select-customer" id="add-invoice-select-customer">
                                    <% model.customers.forEach(customer => { %>
                                        <option value="<%=customer.id%>">
                                            <%= customer.business_name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group" id="div-add-invoice-line">
                                <label>Description</label>
                                <input type="text" class="form-control">
                                <label>Unit Cost</label>
                                <input type="number" class="form-control" value="0" min="0">
                                <label>Quantity</label>
                                <input type="number" class="form-control" value="1" min="1" step="1">
                            </div>
                            <div class="btn-group float-right">
                                <button type="button" class="btn btn-success" id="btn-add-invoice-line">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mx-md-auto mx-lg-auto">
                            <div class="form-group">
                                <label for="add-invoice-subtotal" class="font-weight-light">Subtotal</label>
                                <input type="number" id="add-invoice-subtotal" class="form-control" name="subtotal"
                                value="0" min="0" readonly>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mx-md-auto mx-lg-auto">
                            <div class="form-group">
                                <label for="add-invoice-tax" class="text-info">Tax </label>
                                <input type="number" class="form-control" id="add-invoice-tax" name="tax" 
                                value="0" min="0" readonly>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 mx-md-auto mx-lg-auto">
                            <div class="form-group">
                                <label for="add-invoice-total" class="font-weight-bold">Total</label>
                                <input type="number" id="add-invoice-total" class="form-control" name="total" 
                                value="0" min="0" readonly>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-secondary" id="add-invoice-clear">Clear</button>
                <button type="button" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</div>