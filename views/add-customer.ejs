<!-- Modal -->
<div class="modal fade" id="editCustomerModal" tabindex="-1" role="dialog" aria-labelledby="editCustomerModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
            <i class="fa fa-user-plus" aria-hidden="true"></i> Add Customer
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body">
          <form class="form" name="form-add-customer" id="form-save-customer">
            <div class="form-group">
              Business Name: <input type="text" class="form-control" name="business_name" required><p id="alert-business-name"></p>
            </div>
            <div class="form-group">
              Email Address: <input type="email" class="form-control" name="email_address" required><p id="alert-email-address"></p> 
            </div>
            <div class="form-group">
              Phone Number: <input type="text" class="form-control" name="phone_number" required><p id="alert-phone-number"></p>
            </div>
            <div class="form-group">
              Company Address: <input type="text" name="company_address" class="form-control"><p id="alert-company-address"></p>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="reset" class="btn btn-light">Clear</button>  
          <button type="button" class="btn btn-success" onclick="addCustomer()">Save</button>
        </div>
    </div>
  </div>
</div>